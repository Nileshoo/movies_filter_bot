# ============================================
# MOVIE FILTER BOT - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# REQUIRED variables are marked with (REQUIRED)
# OPTIONAL variables have default values or can be left empty

# ============================================
# SESSION & API CREDENTIALS (REQUIRED)
# ============================================
SESSION=Media_search
API_ID=your_api_id_here
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_here

# ============================================
# ADMIN CONFIGURATION (REQUIRED)
# ============================================
ADMINS=123456789 987654321  # Space-separated admin user IDs
USERNAME=your_admin_username  # Admin username without @
LOG_CHANNEL=-1001234567890  # Log channel ID (must start with -100)
SUPPORT_GROUP=-1001234567890  # Support group ID

# ============================================
# CHANNELS & GROUPS (REQUIRED)
# ============================================
CHANNELS=-1001234567890 -1001234567891  # Space-separated channel IDs where files are stored
MOVIE_GROUP_LINK=https://t.me/your_group  # Your movie group link
AUTH_CHANNEL=-1001234567890  # Force subscribe channel (optional, leave empty if not needed)
REQUEST_CHANNEL=-1001234567890  # Request channel (optional)

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
DATABASE_URI=mongodb://localhost:27017  # MongoDB connection URI
DATABASE_NAME=your_database_name
COLLECTION_NAME=Telegram_files

# Multiple Database Support (True/False)
MULTIPLE_DATABASE=False

# If MULTIPLE_DATABASE is True, fill these:
F_DB_URI=mongodb://localhost:27017  # First database for file data
S_DB_URI=mongodb://localhost:27017  # Second database for file data

# ============================================
# ADDITIONAL CHANNELS
# ============================================
LOG_API_CHANNEL=-1001234567890  # Shortener log channel
DELETE_CHANNELS=-1001234567890  # Files uploaded here will be deleted
LOG_VR_CHANNEL=-1001234567890  # Verification log channel
MOVIE_UPDATE_CHANNEL=-1001234567890  # Movie update channel
SUPPORT_CHAT=https://t.me/your_support_chat  # Support chat link

# ============================================
# VERIFICATION & SHORTENERS
# ============================================
IS_VERIFY=True  # Enable verification system

# Tutorial links
TUTORIAL=https://youtu.be/your_tutorial
TUTORIAL_2=https://youtu.be/your_tutorial_2
TUTORIAL_3=https://youtu.be/your_tutorial_3
VERIFY_IMG=https://graph.org/file/your_verify_image.jpg

# Shortener 1
SHORTENER_API=your_shortener_api_key
SHORTENER_WEBSITE=https://your-shortener.com

# Shortener 2
SHORTENER_API2=your_shortener_api_key_2
SHORTENER_WEBSITE2=https://your-shortener-2.com

# Shortener 3
SHORTENER_API3=your_shortener_api_key_3
SHORTENER_WEBSITE3=https://your-shortener-3.com

# Verification gaps (in seconds)
TWO_VERIFY_GAP=28800  # 8 hours
THREE_VERIFY_GAP=43200  # 12 hours

# ============================================
# BOT IMAGES
# ============================================
START_IMG=https://graph.org/file/image1.jpg https://graph.org/file/image2.jpg  # Space-separated image URLs
FORCESUB_IMG=https://graph.org/file/forcesub.jpg
REFER_PICS=https://graph.org/file/refer1.jpg https://graph.org/file/refer2.jpg
PAYPICS=https://graph.org/file/pay1.jpg https://graph.org/file/pay2.jpg
SUBSCRIPTION=https://graph.org/file/subscription.jpg

# ============================================
# BOT SETTINGS
# ============================================
FILE_AUTO_DEL_TIMER=600  # Auto delete timer in seconds
AUTO_FILTER=True
IS_PM_SEARCH=True
IS_SEND_MOVIE_UPDATE=False  # Turn on after first indexing
PORT=8080
MAX_BTN=10  # Maximum buttons per page
AUTO_DELETE=True
DELETE_TIME=600  # Delete time in seconds
IMDB=True
PROTECT_CONTENT=True
SPELL_CHECK=True
LINK_MODE=True

# ============================================
# FILE & IMDB TEMPLATES
# ============================================
FILE_CAPTION=<b>{file_name}</b>\n\n<b>Size:</b> {file_size}\n<b>Join:</b> @YourChannel
IMDB_TEMPLATE=<b>Title:</b> {title}\n<b>Rating:</b> {rating}/10\n<b>Release:</b> {release_date}\n<b>Genre:</b> {genres}\n\n<b>Plot:</b> {plot}
LONG_IMDB_DESCRIPTION=True

# ============================================
# STREAMING & MULTI-CLIENT
# ============================================
STREAM_MODE=False  # Enable streaming mode
MULTI_CLIENT=True
SLEEP_THRESHOLD=60
PING_INTERVAL=1200  # 20 minutes in seconds
FQDN=https://your-app-url.com  # Your app URL for keep-alive

# ============================================
# PREMIUM SETTINGS
# ============================================
REF_PREMIUM=10  # Referrals needed for premium
PREMIUM_POINT=100  # Points for premium
